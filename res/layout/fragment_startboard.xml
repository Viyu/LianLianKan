<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dip"
        android:background="@drawable/icon_theme"
        android:contentDescription="@string/text_desc_imageview" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/startboard_backsoundcheck"
            style="@style/SerifFontStyle.SoundsCheckStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:text="@string/text_backsound" />

        <CheckBox
            android:id="@+id/startboard_gamesoundscheck"
            style="@style/SerifFontStyle.SoundsCheckStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="@string/text_gamesound" />
    </LinearLayout>

    <Button
        android:id="@+id/startboard_startplay"
        style="@style/SerifFontStyle.StartButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_startplay" />

</LinearLayout>